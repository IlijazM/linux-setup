# Use the debian:bookworm base image, which is more stable for this purpose.
FROM docker.io/library/debian:trixie

# Install necessary packages for ansible and SSH
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    ansible \
    openssh-server \
    python3 \
    python3-apt \
    sshpass \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Create the SSH directory for the root user
RUN mkdir -p /root/.ssh && \
    chmod 700 /root/.ssh

# https://stackoverflow.com/questions/28134239/how-to-ssh-into-docker
# Configure the SSH daemon to disable password login entirely.
RUN sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin without-password/g' /etc/ssh/sshd_config && \
    sed -i 's/#PasswordAuthentication yes/PasswordAuthentication no/g' /etc/ssh/sshd_config

# SSH login fix. Otherwise user is kicked off after login
RUN sed 's@session\s*required\s*pam_loginuid.so@session optional pam_loginuid.so@g' -i /etc/pam.d/sshd

# Add your public SSH key here. This must be done BEFORE setting permissions on it.
# Replace the text below with your actual public key.
COPY id_rsa.pub /root/.ssh/authorized_keys

# Set correct permissions for the authorized_keys file
RUN chmod 600 /root/.ssh/authorized_keys

# Enable passwordless sudo for the root user (optional, but good for consistency)
RUN echo "root ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Create the run directory for the SSH daemon
RUN mkdir -p /var/run/sshd

# Expose the SSH port
EXPOSE 4242 22

# Start the SSH daemon in non-daemon mode
CMD ["/usr/sbin/sshd", "-D"]
